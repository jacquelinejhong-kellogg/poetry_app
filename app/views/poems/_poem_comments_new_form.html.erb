<!-- Form comment start -->
<%= form_with(model: @comment, local: true) do |f| %>
<!-- Form comment end -->

  <!-- Label and input for body start -->
  <div class="form-group">
    <%= f.label :body %>

    <!-- Input for body start -->
    <%= f.text_field :body, class: "form-control" %>
    <!-- Input for body end -->
  </div>
  <!-- Label and input for body end -->

  <!-- Label and input for commenter_id start -->
  <div class="form-group">
    <%= f.label :commenter_id %>

    <!-- Input for commenter_id start -->
    <%= f.collection_select :commenter_id, Poet.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for commenter_id end -->
  </div>
  <!-- Label and input for commenter_id end -->

  <!-- Label and input for poem_id start -->
  <!-- Input for poem_id start -->
  <%= f.hidden_field :poem_id, value: @poem.id %>
  <!-- Input for poem_id end -->
  <!-- Label and input for poem_id end -->

  <%= f.submit "Create comment", class: "btn btn-block btn-outline-secondary" %>
<% end %>
