<% was_validated = poem.errors.any? %>

<%= form_with(model: poem, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% title_class = "form-control" %>
    <% title_was_invalid = poem.errors.include?(:title) %>

    <% if was_validated %>
      <% if title_was_invalid %>
        <% title_class << " is-invalid" %>
      <% else %>
        <% title_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :title %>
    <%= f.text_field :title, class: title_class, placeholder: "Enter title" %>
    <% if title_was_invalid %>
      <% poem.errors.full_messages_for(:title).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% body_class = "form-control" %>
    <% body_was_invalid = poem.errors.include?(:body) %>

    <% if was_validated %>
      <% if body_was_invalid %>
        <% body_class << " is-invalid" %>
      <% else %>
        <% body_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :body %>
    <%= f.text_field :body, class: body_class, placeholder: "Enter body" %>
    <% if body_was_invalid %>
      <% poem.errors.full_messages_for(:body).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% author_class = "form-control" %>
    <% author_was_invalid = poem.errors.include?(:author) %>

    <% if was_validated %>
      <% if author_was_invalid %>
        <% author_class << " is-invalid" %>
      <% else %>
        <% author_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :author_id %>
    <%= f.collection_select :author_id, Poet.all, :id, :to_s, {}, class: "form-control" %>
    <% if author_was_invalid %>
      <% poem.errors.full_messages_for(:author).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% date_class = "form-control" %>
    <% date_was_invalid = poem.errors.include?(:date) %>

    <% if was_validated %>
      <% if date_was_invalid %>
        <% date_class << " is-invalid" %>
      <% else %>
        <% date_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :date %>
    <%= f.datetime_select :date, class: date_class, placeholder: "Enter date" %>
    <% if date_was_invalid %>
      <% poem.errors.full_messages_for(:date).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% commentary_class = "form-control" %>
    <% commentary_was_invalid = poem.errors.include?(:commentary) %>

    <% if was_validated %>
      <% if commentary_was_invalid %>
        <% commentary_class << " is-invalid" %>
      <% else %>
        <% commentary_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :commentary %>
    <%= f.text_field :commentary, class: commentary_class, placeholder: "Enter commentary" %>
    <% if commentary_was_invalid %>
      <% poem.errors.full_messages_for(:commentary).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
