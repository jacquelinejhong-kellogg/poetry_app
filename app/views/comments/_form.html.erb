<% was_validated = comment.errors.any? %>

<%= form_with(model: comment, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for body start -->
  <div class="form-group">
    <% body_class = "form-control" %>
    <% body_was_invalid = comment.errors.include?(:body) %>

    <% if was_validated %>
      <% if body_was_invalid %>
        <% body_class << " is-invalid" %>
      <% else %>
        <% body_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :body %>
    <!-- Input for body start -->
    <%= f.text_field :body, class: body_class, placeholder: "Enter body" %>
    <!-- Input for body end -->
    <% if body_was_invalid %>
      <% comment.errors.full_messages_for(:body).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for body end -->
  <!-- Label and input for commenter_id start -->
  <div class="form-group">
    <% commenter_class = "form-control" %>
    <% commenter_was_invalid = comment.errors.include?(:commenter) %>

    <% if was_validated %>
      <% if commenter_was_invalid %>
        <% commenter_class << " is-invalid" %>
      <% else %>
        <% commenter_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :commenter_id %>
    <!-- Input for commenter_id start -->
    <%= f.collection_select :commenter_id, Poet.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for commenter_id end -->
    <% if commenter_was_invalid %>
      <% comment.errors.full_messages_for(:commenter).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for commenter_id end -->
  <!-- Label and input for poem_id start -->
  <div class="form-group">
    <% poem_class = "form-control" %>
    <% poem_was_invalid = comment.errors.include?(:poem) %>

    <% if was_validated %>
      <% if poem_was_invalid %>
        <% poem_class << " is-invalid" %>
      <% else %>
        <% poem_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :poem_id %>
    <!-- Input for poem_id start -->
    <%= f.number_field :poem_id, class: poem_class, placeholder: "Enter poem" %>
    <!-- Input for poem_id end -->
    <% if poem_was_invalid %>
      <% comment.errors.full_messages_for(:poem).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for poem_id end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
