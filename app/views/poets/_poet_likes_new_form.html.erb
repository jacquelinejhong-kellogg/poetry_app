<%= form_with(model: @like, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :poem_id %>

    <%= f.collection_select :poem_id, Poem.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.hidden_field :liker_id, value: @poet.id %>

  <%= f.submit "Create like", class: "btn btn-block btn-outline-secondary" %>
<% end %>
