<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Sent Friend Requests

    <a data-toggle="collapse" href="#poet_sent_friend_requests_new_form">
      Add friend request
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @poet.sent_friend_requests.each do |friend_request| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to friend_request, friend_request %>

        <%= link_to friend_request, method: :delete, data: { confirm: "Do you really want to delete this friend_request" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="poet_sent_friend_requests_new_form">
        <%= render partial: "poets/poet_sent_friend_requests_new_form" %>
      </div>
    </div>

  </ul>
</div>
