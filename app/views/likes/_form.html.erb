<% was_validated = like.errors.any? %>

<%= form_with(model: like, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for poem_id start -->
  <div class="form-group">
    <% poem_class = "form-control" %>
    <% poem_was_invalid = like.errors.include?(:poem) %>

    <% if was_validated %>
      <% if poem_was_invalid %>
        <% poem_class << " is-invalid" %>
      <% else %>
        <% poem_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :poem_id %>
    <!-- Input for poem_id start -->
    <%= f.number_field :poem_id, class: poem_class, placeholder: "Enter poem" %>
    <!-- Input for poem_id end -->
    <% if poem_was_invalid %>
      <% like.errors.full_messages_for(:poem).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for poem_id end -->
  <!-- Label and input for liker_id start -->
  <div class="form-group">
    <% liker_class = "form-control" %>
    <% liker_was_invalid = like.errors.include?(:liker) %>

    <% if was_validated %>
      <% if liker_was_invalid %>
        <% liker_class << " is-invalid" %>
      <% else %>
        <% liker_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :liker_id %>
    <!-- Input for liker_id start -->
    <%= f.number_field :liker_id, class: liker_class, placeholder: "Enter liker" %>
    <!-- Input for liker_id end -->
    <% if liker_was_invalid %>
      <% like.errors.full_messages_for(:liker).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for liker_id end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
