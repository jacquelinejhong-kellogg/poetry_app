<% was_validated = like.errors.any? %>

<%= form_with(model: like, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% poem_class = "form-control" %>
    <% poem_was_invalid = like.errors.include?(:poem) %>

    <% if was_validated %>
      <% if poem_was_invalid %>
        <% poem_class << " is-invalid" %>
      <% else %>
        <% poem_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :poem_id %>
    <%= f.collection_select :poem_id, Poem.all, :id, :to_s, {}, class: "form-control" %>
    <% if poem_was_invalid %>
      <% like.errors.full_messages_for(:poem).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% liker_class = "form-control" %>
    <% liker_was_invalid = like.errors.include?(:liker) %>

    <% if was_validated %>
      <% if liker_was_invalid %>
        <% liker_class << " is-invalid" %>
      <% else %>
        <% liker_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :liker_id %>
    <%= f.collection_select :liker_id, Poet.all, :id, :to_s, {}, class: "form-control" %>
    <% if liker_was_invalid %>
      <% like.errors.full_messages_for(:liker).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
